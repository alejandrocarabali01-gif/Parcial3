{
  "openapi": "3.0.0",
  "info": {
    "title": "API FinanzIA",
    "version": "1.0.0",
    "description": "Documentación de la API FinanzIA"
  },
  "paths": {
    "/api/auth/login": {
      "post": {
        "summary": "Iniciar sesión",
        "tags": ["Autenticación"],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "example": {
                "username": "demoUser",
                "password": "1234"
              }
            }
          }
        },
        "responses": {
          "200": { "description": "Inicio de sesión exitoso" },
          "400": { "description": "Faltan datos" }
        }
      }
    },

    "/api/transactions": {
      "get": {
        "summary": "Listar todas las transacciones",
        "tags": ["Transacciones"],
        "responses": {
          "200": { "description": "Transacciones obtenidas" }
        }
      },
      "post": {
        "summary": "Crear una nueva transacción",
        "tags": ["Transacciones"],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "example": {
                "type": "gasto",
                "amount": 50000,
                "category": "Comida",
                "date": "2025-01-10"
              }
            }
          }
        },
        "responses": {
          "201": { "description": "Transacción creada" }
        }
      }
    },

    "/api/transactions/{id}": {
      "get": {
        "summary": "Obtener detalle de transacción",
        "tags": ["Transacciones"],
        "parameters": [
          { "name": "id", "in": "path", "required": true }
        ],
        "responses": {
          "200": { "description": "Detalle obtenido" }
        }
      },
      "put": {
        "summary": "Actualizar una transacción",
        "tags": ["Transacciones"],
        "parameters": [
          { "name": "id", "in": "path", "required": true }
        ],
        "responses": {
          "200": { "description": "Transacción actualizada" }
        }
      },
      "delete": {
        "summary": "Eliminar una transacción",
        "tags": ["Transacciones"],
        "parameters": [
          { "name": "id", "in": "path", "required": true }
        ],
        "responses": {
          "200": { "description": "Transacción eliminada" }
        }
      }
    },

    "/api/transactions/report/daily": {
      "get": {
        "summary": "Reporte diario",
        "tags": ["Reportes"],
        "responses": {
          "200": { "description": "Reporte generado" }
        }
      }
    },

    "/api/transactions/report/monthly": {
      "get": {
        "summary": "Reporte mensual",
        "tags": ["Reportes"],
        "responses": {
          "200": { "description": "Reporte generado" }
        }
      }
    },

    "/api/transactions/report/category": {
      "get": {
        "summary": "Reporte por categoría",
        "tags": ["Reportes"],
        "responses": {
          "200": { "description": "Reporte generado" }
        }
      }
    },

    "/api/transactions/stats/totals": {
      "get": {
        "summary": "Estadísticas: totales",
        "tags": ["Estadísticas"],
        "responses": {
          "200": { "description": "Totales obtenidos" }
        }
      }
    },

    "/api/transactions/stats/summary": {
      "get": {
        "summary": "Estadísticas: resumen",
        "tags": ["Estadísticas"],
        "responses": {
          "200": { "description": "Resumen obtenido" }
        }
      }
    }
  }
}
